extends layout

block content
  h1.jumbotron Flickr photo feed
    =title
  
  .row
    each pic in items
      .col-sm-6.col-md-4
        .thumbnail
          img(data-src=pic.media.m, src=pic.media.m alt='...')
          .caption
            h4 
              =pic.title
            p
              | by 
              a.btn.btn-primary(href='/'+pic.author_id) 
                =pic.author.match(/.*\((.*)\)/)[1]

